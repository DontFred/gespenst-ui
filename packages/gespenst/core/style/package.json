    "flat": "^5.0.2",
    "lodash.foreach": "^4.5.0"
  },
  "devDependencies": {
    "@types/color": "^3.0.6",
    "@types/flat": "^5.0.2",
    "@types/lodash.foreach": "^4.5.9",
    "eslint": "^8",
    "eslint-config-gi": "^0.1.1",
    "tailwindcss": "^3.4.3",
